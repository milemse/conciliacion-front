{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "sql:default",
    "sql:allow-execute",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        "http://*:*/*"
      ]
    },
    "fs:write-all",
    "dialog:default"
  ]
}